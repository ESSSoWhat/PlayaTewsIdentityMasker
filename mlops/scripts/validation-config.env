# MLOps Validation Configuration
# Update these values for your specific environments

# Host Configuration
LOCAL_HOST="localhost"
STAGING_HOST="staging.yourdomain.com"
PRODUCTION_HOST="production.yourdomain.com"

# Port Configuration
MODEL_API_PORT="8000"
MLFLOW_PORT="5000"
GRAFANA_PORT="3000"
PROMETHEUS_PORT="9090"
REDIS_PORT="6379"
POSTGRES_PORT="5432"

# Timeout Configuration (seconds)
TIMEOUT="10"

# Test Configuration
RUN_UNIT_TESTS="true"
RUN_INTEGRATION_TESTS="true"
RUN_PERFORMANCE_TESTS="true"

# Kubernetes Configuration
KUBERNETES_NAMESPACE="mlops"
KUBERNETES_CLUSTER="your-cluster"

# Cloud Configuration
AWS_REGION="us-east-1"
AWS_ECS_CLUSTER="mlops-cluster"
AWS_ECS_SERVICE="mlops-service"

AZURE_RESOURCE_GROUP="mlops-rg"
AZURE_CONTAINER_NAME="mlops-container"

GCP_PROJECT="your-project"
GCP_REGION="us-central1"
GCP_CLOUD_RUN_SERVICE="mlops"

# Monitoring Configuration
GRAFANA_USERNAME="admin"
GRAFANA_PASSWORD="admin"
PROMETHEUS_USERNAME="admin"
PROMETHEUS_PASSWORD="admin"

# Backup Configuration
BACKUP_DIR="/backups/mlops"
LOG_DIR="/var/log/mlops"

# Alerting Configuration
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT="587"
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# Security Configuration
JWT_SECRET="your-jwt-secret"
ENCRYPTION_KEY="your-encryption-key"

# Feature Store Configuration
HOPSWORKS_API_KEY="your-hopsworks-api-key"
HOPSWORKS_PROJECT="your-project-name"

# Database Configuration
POSTGRES_HOST="localhost"
POSTGRES_DB="mlops"
POSTGRES_USER="mlops"
POSTGRES_PASSWORD="secure_password"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PASSWORD=""
REDIS_DB="0" 